  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run babel:compiler && npm run sass:compiler",
    "babel:compiler": "babel src --out-dir ./dist --extensions \".jsx,.js\"",
    "sass:compiler": "sass ./src/stylesheets/manifest.scss ./dist/stylesheets/manifest.css",
    "dev": "pear run -d .",
    "test": "brittle test/*.test.js",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,scss}'",
    "format:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx,scss}'"
  },
